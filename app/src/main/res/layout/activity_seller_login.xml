<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerLoginActivity"
    android:background="@drawable/bg_login_reg">

    <EditText
        android:id="@+id/LoginPasswd"
        android:layout_width="259dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/forgotpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmail" />

    <TextView
        android:id="@+id/regtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"
        android:text="Register"
        android:textColor="@color/green"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/googlesignin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="176dp"
        android:layout_height="30dp"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="91dp"
        android:text="Want to become a family?"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/regtv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googlesignin" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/green"
        android:text="Login"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/googlesignin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotpass" />


    <TextView
        android:id="@+id/googlesignin"
        android:layout_width="246dp"
        android:layout_height="30dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/back"
        android:drawableLeft="@drawable/google"
        android:drawablePadding="2dp"
        android:padding="3dp"
        android:text="Sign in with Google"
        android:textColor="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginbtn" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:text="Forgot Password?"
        android:textColor="#025A0F"
        app:layout_constraintBottom_toTopOf="@+id/loginbtn"
        app:layout_constraintEnd_toEndOf="@+id/LoginPasswd"
        app:layout_constraintTop_toBottomOf="@+id/LoginPasswd" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="259dp"
        android:layout_height="55dp"
        android:layout_marginTop="325dp"
        android:layout_marginBottom="255dp"
        android:ems="10"
        android:hint="Enter E-mail"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/regtv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="94dp"
        android:fontFamily="serif"
        android:text="Welcome\nBack"
        android:textColor="#025A0F"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/LoginEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>